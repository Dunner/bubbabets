
.tabs
  width 100%
  display table
  height 50px
  table-layout fixed
  background #252525
  & > ul
    margin 0
    padding 0
    display table-row
    & > li
      list-style none
      cursor pointer
      color #fff
      text-align center
      height 50px
      line-height 50px
      display table-cell
      border-right 1px solid #333
      border-bottom 1px solid #333
      & .bubble
        position absolute
        right 10px
        top 10px
        bottom 10px
        width 30px
        background white
        border-radius 100%
        line-height 30px
        color green
        text-align center
      &.active
        background #333
        border-bottom 0px
      &:last-child
        border-right 0px

    
.sidefeed
  height calc( 100% - 50px )
  bottom 0
  position absolute
  left 0
  right 0
  padding 5%
  
.bet
  width 100%
  padding 2px 8px
  .inside
    width 100%
    border-radius 3px
    border 2px solid rgba(0,0,0,.1)
    padding 5px
    padding-left 75px
    & .icon
      position absolute
      overflow hidden
      left 0px
      top 0px
      border 5px solid #444
      width 70px
      height 70px
  &.red
    padding-right 15px
    .inside
      background rgba(232,115,82,1)
  &.blue 
    padding-left 15px
    .inside
      background rgba(68,190,192,1)

.betting-window
  padding 15px
  border-top 1px solid #222
  color #fefefe
  position absolute
  left 0px
  right 0px
  bottom 0px

.timer
  left 0px
  right 0px
  height 60px
  background #222
  color #fefefe
  position absolute
  z-index 99
  bottom 100%
  & h4
    color red
    
.bet-text
  width 100%
  font-size 0.95rem
  margin 0 !important
  
.double-border
  border-top 1px solid rgba(255,255,255,0.1)
  border-bottom 1px solid rgba(255,255,255,0.1)
  line-height 200%
  
.icon
  position absolute
  padding 18px 5px 9px 8px
  font-size 0.8rem !important
  color #a9a9a9
  z-index 8

.cards
  width 100%
  height 100%
  & .card
    width 100%
    float left
    background #19191f
    border 1px solid rgba(255,255,255,0.1)
    text-align center
    padding 2%
    &.selected
      border 1px solid green
    &:first-child
      margin-bottom 10px
    & .bet-upper
      width 100%
      float left
    & .bet-left
      width 100%
      float left
      & .bet-image
        width 35%
        border 5px solid rgba(255,255,255,0.1)
    & .bet-right
      width 100%
      float left
      padding-top 2%
      & .bet-name
        width 100%
        height 100%
        float left
    & .bet-lower
      width 100%
      float left
      & .bet-desc-wrap
        width 100%
        float left
        padding 3%
        font-size 0.85rem
        text-align center
        line-height 130%
        & .bet-desc
          width 100%
          float left
      & .bet-bot
        width 100%
        float left
        border-top 1px solid rgba(255,255,255,0.1)
        padding 2% 0 0 0
        & .bet-ratio
          width 50%
          float left
        & .bet-odds
          width 50%
          float left
          border-left 1px solid rgba(255,255,255,0.1)
  & .betting-amount-wrap
    padding-top 5px
    border-top 1px solid #222
    color #fefefe
    position absolute
    left 0px
    right 0px
    bottom 0px
    & .betting-amount
      width 100%
      height 29px
      padding-left 26px
      margin 10px 0 10px 0
      border 1px solid rgba(255,255,255,0.1)
      background #232329
      font-family 'FontAwesome', "Helvetica Neue", Arial, sans-serif
      color #fff
    
