//
// Imports
//

@import 'reset.css'
@import 'utils.styl'
@import 'forms.styl'
@import 'animations.styl'
@import 'responsive.styl'

//
// Typographic
//

presets(minor-second)

html
  font-family 'Open Sans', sans-serif
  font-size 12px
  @media (min-width 600px)
    font-size 14px
  @media (min-width 800px)
    font-size 16px
  @media (min-width 1000px)
    font-size 18px

t-headers('Open Sans')

//
// Other
//

*
  margin 0
  padding 0
  box-sizing border-box
  position relative


body, html
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden
  position relative
  background #131313
  color #dcdcdc

/* apply a natural box layout model to all elements, but allowing components to change */
html
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

ul
  margin 0px

a
  text-decoration none
  color black

.dnr-box
  width 100%
  height 100%
  .main-container
    height calc(100% - 70px)
    width 100%
    &:after
      content ''
      display block
      clear both
    .bets-view 
      overflow hidden
      width 20%
      float left
      height 100%
      border-right 1px solid #222
    .social-scroll
      overflow hidden
      overflow-y auto
      height 100%
      width 60%
      float left
      .social-view
        width 100%
        min-height 90%
    .bets-chat
      overflow hidden
      width 20%
      float left
      height 100%
      border-left 1px solid #222